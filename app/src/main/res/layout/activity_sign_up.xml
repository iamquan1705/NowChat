<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.SignUpActivity">

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/tvNameApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now Chat"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_user"
        app:layout_constraintVertical_bias="0.005" />

    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="@color/text_color"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameApp"
        app:layout_constraintVertical_bias="0.035" />

    <EditText
        android:id="@+id/edtUserNameSU"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_text_input"
        android:drawableRight="@drawable/icon_username"
        android:drawablePadding="10dp"
        android:hint="User name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="#4B413A"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSignUp"
        app:layout_constraintVertical_bias="0.045" />

    <EditText
        android:id="@+id/edtEmailSU"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_text_input"
        android:drawableRight="@drawable/icon_email"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="#4B413A"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtUserNameSU"
        app:layout_constraintVertical_bias="0.024" />

    <EditText
        android:id="@+id/edtPasswordSU"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_text_input"
        android:drawableRight="@drawable/icon_lock"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="#4B413A"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailSU"
        app:layout_constraintVertical_bias="0.028" />

    <EditText
        android:id="@+id/edtRePasswordSU"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_text_input"
        android:drawableRight="@drawable/icon_lock"
        android:drawablePadding="10dp"
        android:hint="Confirm your password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="#4B413A"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPasswordSU"
        app:layout_constraintVertical_bias="0.031" />

    <EditText
        android:id="@+id/edtBirthDaySU"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_text_input"
        android:drawableRight="@drawable/icon_lock"
        android:drawablePadding="10dp"
        android:hint="Birthday"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="#4B413A"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtRePasswordSU"
        app:layout_constraintVertical_bias="0.045" />

    <EditText
        android:id="@+id/edtSexSU"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_text_input"
        android:drawableRight="@drawable/icon_lock"
        android:drawablePadding="10dp"
        android:hint="Sex"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="#4B413A"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtBirthDaySU"
        app:layout_constraintVertical_bias="0.075" />

    <EditText
        android:id="@+id/edtPhoneSU"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_text_input"
        android:drawableRight="@drawable/icon_lock"
        android:drawablePadding="10dp"
        android:hint="Phone"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="#4B413A"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSexSU" />

    <android.widget.Button
        android:id="@+id/btnSignUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:padding="10dp"
        android:text="Sign up"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edtRePasswordSU"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/edtRePasswordSU"
        app:layout_constraintRight_toRightOf="@id/edtRePasswordSU"
        app:layout_constraintStart_toStartOf="@+id/edtRePasswordSU"
        app:layout_constraintTop_toBottomOf="@+id/edtPhoneSU"
        app:layout_constraintVertical_bias="0.295" />


</androidx.constraintlayout.widget.ConstraintLayout>